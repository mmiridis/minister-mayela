{% extends 'AppBundle::backend.html.twig' %}

{% set page_title = "Edit FAQ" %}

{% block body %}

    {{ form(delete_form, {attr:{id:'delete-form'}}) }}

    <div style="float: right; padding-top: 10px;" class="btn-group">
        <a title="FAQ List" href="{{ path('backend_faq') }}" class="btn btn-default"><i class="glyphicon glyphicon-list"></i></a>
        <a title="Delete FAQ" href="#" onclick="if(confirm('sure?')){$('#delete-form').submit()}" class="btn btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
    </div>

    <h1>{{ page_title }}</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <input type="submit" value="update" class="btn btn-primary"/>
    {{ form_end(form) }}

{% endblock %}
